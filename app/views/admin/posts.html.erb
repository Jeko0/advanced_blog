<div class="container">
    <h1 class="text-center">Admin</h1>
    <%= render "admin/nav_links"%>
    <%= @posts.count %>
    <br>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Post</th>
                <th scope="col">Author</th>
                <th scope="col">Comments</th>
                <th scope="col">Likes</th>
                <th scope="col">Approve?</th>
                <th scope="col">Approval Status</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <th scope="row"><%= post.id %></th>
                    <td><%= link_to post.title, admin_post_path(post) %></td>
                    <td><%= post.user.email %></td>
                    <td><%= pluralize(post.comments.count, "Comment")%></td>
                    <td><%= post.likes.count %></td>
                    <td><%= button_to "Approve",  approve_post_path(post) %></td>
                    <td><%= post.approved %></td>
                    <td><%= button_to "Delete", admin_delete_post_path(post),  method: :delete, class:"btn btn-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>