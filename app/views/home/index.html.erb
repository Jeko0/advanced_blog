<h1><%= t :hello %></h1>
<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div id="posts">
      <% @posts.each do |post| %>
        <%= render post %>
        <%= button_to t(:destroy_post), post, method: :delete, class:"btn btn-danger" %>
        <hr>
      <% end %>
    </div>
  <% end %>
<% end %>
